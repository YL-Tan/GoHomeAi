# Environment configuration
ENV=development  # Can be development, staging, or production
BACKEND_PORT=8080

# Database configuration
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_PORT=5433
DATABASE_URL=postgres://${DB_USER}:${DB_PASSWORD}@db:${DB_PORT}/${DB_NAME}

# API configuration
API_TIMEOUT=30s
MAX_REQUEST_SIZE=10mb

# Logging
LOG_LEVEL=debug  # Can be debug, info, warn, error
LOG_FORMAT=console  # Can be console or json

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m
